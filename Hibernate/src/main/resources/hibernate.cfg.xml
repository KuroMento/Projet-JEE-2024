<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ecole</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">mdp</property>

        <!-- JDBC connection pool settings -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.format_sql">true </property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping resource="reveng.xml"/>
        <mapping class="model.Cinema"/>
        <mapping class="model.Film"/>
        <mapping class="model.Individu"/>
        <mapping class="model.Jouer"/>
        <mapping class="model.Projection"/>

        <!-- Add annotated aClasses here
        <mapping package=""resource="models/Cinema.hbm.xml" />
        <mapping package=""resource="models/Film.hbm.xml" />
        <mapping package=""resource="models/Jouer.hbm.xml" />
        <mapping package=""resource="models/Individu.hbm.xml" />
        <mapping package=""resource="models/Projection.hbm.xml" />
        -->
    </session-factory>
</hibernate-configuration>